    <select parameterType="map" id="consultarHorarios" resultMap="HorarioResult">
        SELECT
        h.idhorario,
        h.idusuario,
        h.idrecurso,
        h.fecha,
        h.horainicial,
        h.horafinal,
        h.estado,
        h.recurrencia,
        h.fecharecurrencia

        FROM "ECIStuff".horarios as h;
    </select>

    <!--
    <insert id="reservarRecurso" parameterType="map">
        insert into Reservas(Fecha, Horaini, Horafin, recurso, usuario, recurrencia, fecharecurrencia,estado) values (#{fecha}, #{horaini}, #{horafin}, #{recurso}, #{carnet}, #{recurrencia}, #{fecharecurrencia},#{estado})
    </insert>
    -->

    <resultMap type='Horario' id='HorarioResult'>
        <id property='idhorario' column='idhorario'/>
        <result property='idusuario' column='idusuario'/>
        <result property='idrecurso' column='idrecurso'/>
        <result property='fecha' column='fecha'/>
        <result property='horainicial' column='horainicial'/>
        <result property='horafinal' column='horafinal'/>
        <result property='estado' column='estado'/>
        <result property='recurrencia' column='recurrencia'/>
        <result property='fecharecurrencia' column='fecharecurrencia'/>
    </resultMap>
</mapper>